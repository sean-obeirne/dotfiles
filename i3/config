bindsym $launch+s exec --no-startup-id i3-msg '[class="Spotify"] focus' || flatpak run com.spotify.Client
bindsym $launch+f exec --no-startup-id i3-msg '[class="firefox"] focus' || firefox
bindsym $launch+g exec --no-startup-id i3-msg '[class="steam"] focus' || steam
