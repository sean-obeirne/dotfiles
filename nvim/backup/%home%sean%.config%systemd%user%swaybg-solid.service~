[Unit]
Description=Solid color wallpaper via swaybg
Wants=graphical-session.target
After=graphical-session.target

[Service]
Type=simple
# Inherit the Wayland env from your session before starting
ExecStartPre=/usr/bin/systemctl --user import-environment WAYLAND_DISPLAY XDG_RUNTIME_DIR
# Kill any old swaybg, then start the new one
ExecStart=/usr/bin/bash -lc 'pkill -x swaybg || true; exec swaybg -o DP-2 -c #000000 -o DP-3 -c #000000'
Restart=on-failure
RestartSec=1

[Install]
WantedBy=graphical-session.target
